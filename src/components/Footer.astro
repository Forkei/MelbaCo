          <span class="font-body text-sm">© {currentYear} Melba&Co - Tous droits réservés</span>
        </div>

        <!-- Footer Links -->
        <nav class="flex flex-wrap justify-center space-x-4 md:space-x-6 text-sm font-body">
          <a href="/presse" class="hover:text-primary-orange transition-colors">
            ESPACE PRESSE
          </a>
          <span class="text-white/40">|</span>
          <a href="/credits" class="hover:text-primary-orange transition-colors">
