<script is:inline>
  document.getElementById('admin-btn')?.addEventListener('click', function() {
    if (typeof netlifyIdentity !== 'undefined') {
      netlifyIdentity.open();
    } else {
      window.location.href = '/admin/';
    }
  });
</script>